<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Add Course</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

    <div class="row">
        <div class="col-lg-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Search Course
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <form action="/join-class" method="post">
                                <div class="form-group">
                                    <label>Course Title</label>
                                    <input class="form-control" placeholder="CS180, MATH251">
                                </div>

                                <button type="submit" class="btn btn-default">Find Class</button>

                                <br>

                                <div class="form-group">
                                    <label>Search Results</label>
                                    <select multiple class="form-control">
                                        <option>1</option>
                                        <option>2</option>
                                        <option>3</option>
                                        <option>4</option>
                                        <option>5</option>
                                    </select>
                                </div>

                                <button type="submit" class="btn btn-default">Join Class</button>
                                <button type="reset" class="btn btn-default">Cancel</button>
                            </form>
                        </div>

                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    Create Course
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <form action="/create-course" method="post">

                                <div class="form-group">
                                    <label>Course Title</label>
                                    <input class="coursename" placeholder="CS180, MATH251">
                                </div>
                                <div class="form-group">
                                    <label>Full Course Title</label>
                                    <input class="fullCourseName" placeholder="Systems Programming">
                                </div>
                                <div class="form-group">
                                    <label>Semester</label>
                                    <select multiple class="form-control" id="semester">
                                        <option>Fall 2017</option>
                                        <option>Summer 2017</option>
                                        <option>Sprint 2017</option>
                                        <option>Fall 2016</option>
                                    </select>
                                </div>

                                <button type="submit" class="btn btn-default">Create Course</button>
                                <button type="reset" class="btn btn-default">Cancel</button>
                            </form>
                            <form action="/insert" method="post">
                                <div class="input">
                                    <label for="title">Title</label>
                                    <input type="text" id="title" name="title">
                                </div>
                                <div class="input">
                                    <label for="content">Content</label>
                                    <input type="text" id="content" name="content">
                                </div>
                                <div class="input">
                                    <label for="author">Author</label>
                                    <input type="text" id="author" name="author">
                                </div>
                                <button type="submit">INSERT</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
