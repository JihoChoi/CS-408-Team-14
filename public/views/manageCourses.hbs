    <div class="row">
        <div class="col-lg-8">
            <!-- leave course -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    Delete Course
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <form action="/delete-course" method="post">
                                <div class="form-group">
                                    <label>Course Title</label>
                                    <!-- todo change delete course to delete course for that user -->

                                    <select multiple class="form-control" id="delete_course" name="delete_course">

                                        {{# each courses }}
                                            <option value="{{ this }}">{{ this }}</option>
                                            <!--<option value="{{ this.semester }}">{{ this.semester }}</option>-->
                                        {{/each}}

                                    </select>
                                </div>

                                <button type="submit" class="btn btn-default">Delete Course</button>
                                <button type="reset" class="btn btn-default">Cancel</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <!-- join course -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    Join Course
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <form action="/join-class" method="post">
                                <div class="form-group">
                                    <label>Course Title</label>
                                    <input class="form-control" placeholder="CS180, MATH251">
                                </div>

                                <button type="submit" class="btn btn-default">Find Class</button>

                                <br><br>

                                <div class="form-group">
                                    <!--<label>Search Results</label>-->
                                    <label>Existing Courses</label>
                                    <select multiple class="form-control">
                                        {{# each courses }}
                                            <option value="{{ this }}">{{ this }}</option>
                                            <!--<option value="{{ this.semester }}">{{ this.semester }}</option>-->
                                        {{/each}}
                                        <!--<option>none</option>-->
                                    </select>
                                </div>

                                <button type="submit" class="btn btn-default">Join Class</button>
                                <button type="reset" class="btn btn-default">Cancel</button>
                            </form>
                        </div>

                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>

